@model  IEnumerable<OnlineMeeting>
@{
    ViewBag.Title = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Online Meetings</h2>
<p>
    <a asp-action="Add">New Online Meeting</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Time)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Platform)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MeetingId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProfessorName)
            </th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date.Day).
                @Html.DisplayFor(modelItem => item.Date.Month).
                @Html.DisplayFor(modelItem => item.Date.Year)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Time.Hour):
                @Html.DisplayFor(modelItem => item.Time.Minute):
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Platform)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MeetingId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProfessorName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.OnlineMeetingId">
                    <input type="submit" value="Edit" class="btn-group-sm" />
                </a>
                <a asp-action="Delete" asp-route-id="@item.OnlineMeetingId">
                    <input type="submit" value="Delete" class="btn-danger" />
                </a>
            </td>
        </tr>
    }
    </tbody>
</table>
